<%= form_with(model: @hackathon, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_area :description, size: "10x5", class: 'form-control' %>

  <%= f.label :url %>
  <%= f.text_field :url, class: 'form-control' %>

  <%= f.label :holding_time, '開催される時期' %>
  <%= f.select :holding_time,[["春頃 4月~6月", 1], ["夏頃 7月~9月", 2], ["秋頃 10月~12月", 3], ["冬頃 1月~3月", 4]], include_blank: "選択して下さい" %>

  <%= f.submit '作成', class: 'btn btn-primary' %>
<% end %>
